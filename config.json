{
    "name": "Export Data Dictionary Changes",

    "namespace": "STPH\\exportDataDictionaryChanges", 

    "description": "Another module made with create-redcap-module.",

    "documentation": "README.md",

    "authors": [
        {
             "name": "Ekin Tertemiz",
             "email": "ekin.tertemiz@swisstph.ch",
             "institution": "Swiss Tropical and Public Health Institute (STPH)"
         }
     ],

    "framework-version": 6,

    "permissions": [
        "redcap_every_page_top"
    ],

    "enable-every-page-hooks-on-system-pages": false,

    "links":{},

    "no-auth-pages": [],

    "system-settings": [],

    "project-settings": [
        {
            "key": "enable-download",
            "type": "dropdown",
            "name": "<b>Automatic Downloads</b><br>Enable automatic Downloads? <br><i>An automatic download will start after approval, if Data Dictionary Export was requested during submission.</i>",
            "choices": [
				{
					"name" : "Disabled",
					"value" : "0"
				},
				{
					"name" : "Automatic & Manual Approvals",
					"value" : "1"
				},
				{
					"name" : "Automatic approvals",
					"value" : "2"
				},
				{
					"name" : "Manual approvals",
					"value" : "3"
				}
            ]            
        },
        {
            "key": "enable-mail",
            "type": "dropdown",
            "name": "<b>Automatic Emails</b><br>Enable automatic Emails? <br><i>An automatic email will be sent to the submission author, if Data Dictionary Export was request during submission.</i>",
            "choices": [
				{
					"name" : "Disabled",
					"value" : "0"
				},
				{
					"name" : "Automatic & Manual Approvals",
					"value" : "1"
				},
				{
					"name" : "Automatic approvals",
					"value" : "2"
				},
				{
					"name" : "Manual approvals",
					"value" : "3"
				}
            ]
        },
        {
            "key": "is-active",
            "type": "checkbox",            
            "hidden": true
        }
    ],

    "crons": [],

    "compatibility": {
        "php-version-min": "5.4.0",
        "redcap-version-min": "8.0.0"
    }
 }